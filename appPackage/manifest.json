{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "AE_ActionME-${{TEAMSFX_ENV}}",
        "full": "full name for AE_ActionME"
    },
    "description": {
        "short": "short description of AE_ActionME",
        "full": "full description of AE_ActionME"
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "commands": [
                {
                    "id": "createCard",
                    "context": [
                        "compose",
                        "message",
                        "commandBox"
                    ],
                    "description": "Command to run action to create a static Card from Compose Box",
                    "title": "AE: Create Static Card",
                    "type": "action",
                    "parameters": [
                        {
                            "name": "title",
                            "title": "Card title",
                            "description": "Title for the card",
                            "inputType": "text"
                        },
                        {
                            "name": "subTitle",
                            "title": "Subtitle",
                            "description": "Subtitle for the card",
                            "inputType": "text"
                        },
                        {
                            "name": "text",
                            "title": "Text",
                            "description": "Text for the card",
                            "inputType": "textarea"
                        }
                    ]
                },
                {
                    "id": "createStaticUrlDialog",
                    "context": [
                        "compose",
                        "message",
                        "commandBox"
                    ],
                    "description": "Create static URL dialog",
                    "title": "AE: Create static URL Dialog",
                    "type": "action",
                    "fetchTask": false,
                    "taskInfo": {
                        "title": "Create static URL Dialog",
                        "height": "medium",
                        "width": "medium",
                        "url": "https://helloworld36cffe.z5.web.core.windows.net/index.html#/tab"
                    }
                },
                {
                    "id": "fetchUrlDialog",
                    "context": [
                        "compose",
                        "message",
                        "commandBox"
                    ],
                    "description": "Fetch a URL dialog",
                    "title": "AE: Fetch URL Dialog",
                    "type": "action",
                    "fetchTask": true
                },
                {
                    "id": "fetchCardDialog",
                    "context": [
                        "compose",
                        "message",
                        "commandBox"
                    ],
                    "description": "Fetch a card dialog",
                    "title": "AE: Fetch a card dialog",
                    "type": "action",
                    "fetchTask": true
                }
            ]
        }
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "localhost:53000",
        "helloworld36cffe.z5.web.core.windows.net"
    ]
}